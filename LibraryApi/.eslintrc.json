{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-restricted-globals": 0,
        "no-console": 0,
        "linebreak-style": 0,
        "func-names": 0,
        "no-underscore-dangle": 0,
        "object-curly-spacing": 0,
        "block-spacing": 0,
        "consistent-return": 0
    },
    "overrides": [
        {
        "files": ["./tests/*.js"],
            "rules": {
               "no-undef": 0   
            }
        },
        {
        "files": ["*.test.js"],
            "rules": {
               "no-undef": 0   
            }
        }
    ]
}
